{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run test for moduleA",
            "type": "shell",
            "windows": {
                "command": "python3",
                "args":["-m","unittest","tests/test_moduleA.py"],
            },
            "problemMatcher": [],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "group": {
                "kind": "test",
                "isDefault": true
            }
        },

        {
            "label": "Python print location",
            "type": "shell",
            "windows": {
                "command": "python",
                "args": ["-c", "import sys, os; print(os.path.dirname(sys.executable))"],
            },
            "problemMatcher": [],
        }
    ]
}